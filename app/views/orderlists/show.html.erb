<table class="table-bordered" >
	<thead>
		<tr>
			<th>#</th>
			<th>Product</th>
			<th>Subcriber</th>
			<th>Number</th>
			<th>Price</th>
			<th>Status</th>
			<th>Edit</th>
		</tr>
	</thead>
	<tbody>
		<% @orderlist.orders.each do |order| %>
		<tr>
			<td><%= order.id%></td>
			<td><%= order.product.name%></td>
			<td><%= order.user.first_name+"_"+order.user.last_name %> </td>
			<td><%= order.number%> </td>
			<td><%= order.product.price%> </td>
			<td><%= order.status %> </td>
			<td><%= "edit" %> </td>
			<% @total = @total + order.number*order.product.price %>
		</tr>
		<% end %>
	</tbody>
</table>

<h2><%= "Total: $" + " " +@total.to_s %></h2>

<div class="list-form">
	<%= link_to "Back",  m_orderlists_path  %>
</div>
